<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>

<main role="main" class="container mt-4">
  <h2>Ask about the US Economy</h2>
  <form id="economy-query-form" action="/api/query" method="POST">
    <div class="mb-3">
      <label for="queryInput" class="form-label">Your Query</label>
      <input type="text" class="form-control" id="queryInput" name="query" placeholder="Enter your query here, e.g., 'What is the current unemployment rate?' or 'Show GDP growth last quarter'" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <div id="queryResult" class="mt-4"></div>
</main>

<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
</body>
</html>